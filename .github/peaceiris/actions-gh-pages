name: Update Weather Page

on:
  schedule:
    - cron: '*/5 * * * *'  # Run every 5 minutes
  push:
    branches:
      - main

jobs:
  update-weather:
    runs-on: ubuntu-latest

    steps:
    # Step 1: Checkout the repository
    - name: Checkout repository
      uses: actions/checkout@v2

    # Step 2: Set up Node.js (you may need this for build steps)
    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'

    # Step 3: Install dependencies (if you have any)
    - name: Install dependencies
      run: npm install

    # Step 4: Build your weather page (you can replace this with your build command)
    - name: Build the weather page
      run: npm run build   # or replace with your build command

    # Step 5: Deploy to GitHub Pages
    - name: Deploy updated weather page to GitHub Pages
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}  # Uses the GitHub token automatically
        publish_branch: gh-pages  # The branch to publish (could be 'gh-pages' or any other branch you use)
        publish_dir: ./build     # Directory to publish (replace with the correct build directory)
